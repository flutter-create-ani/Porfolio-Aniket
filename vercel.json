{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "maxLambdaSize": "10mb",
        "memory": 1024,
        "buildCommand": "NODE_OPTIONS='--max_old_space_size=1024' npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ]
}